<Window x:Class="PrintCrypt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main" Height="250" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Key:" FontWeight="Bold"/>
            <TextBox x:Name="KeyTextBox" IsReadOnly="True" Margin="0 5 0 10"/>
            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                <CheckBox x:Name="ShowQRCodeImageCheckBox" Content="Show QR Code Image"/>
            </StackPanel>
            <Image x:Name="QRCodeImage" Width="150" Height="150"/>
        </StackPanel>
    </Grid>
</Window>





